<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="5dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_card_view_sqa_cell_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_item_id" />

        <TextView
            android:id="@+id/tv_card_view_sqa_cell_survey_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_encounter_id" />

        <TextView
            android:id="@+id/tv_card_view_sqa_cell_question_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_question_id" />

        <TextView
            android:id="@+id/tv_card_view_sqa_cell_answer_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_answer_value" />

    </LinearLayout>

</android.support.v7.widget.CardView>