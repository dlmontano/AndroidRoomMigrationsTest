<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddSurveyQuestionAnswerActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_act_add_sqa_encounter_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="ID encuentro:"
            app:layout_constraintBottom_toBottomOf="@+id/spin_act_add_sqa_encounter_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spin_act_add_sqa_encounter_id" />

        <TextView
            android:id="@+id/tv_act_add_sqa_question_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="ID pregunta:"
            app:layout_constraintBottom_toBottomOf="@+id/spin_act_add_sqa_question_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spin_act_add_sqa_question_id" />

        <TextView
            android:id="@+id/tv_act_add_sqa_answer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Valor resp.:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_sqa_answer_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_sqa_answer_value" />

        <Spinner
            android:id="@+id/spin_act_add_sqa_encounter_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_sqa_encounter_id"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spin_act_add_sqa_question_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_sqa_encounter_id"
            app:layout_constraintTop_toBottomOf="@+id/spin_act_add_sqa_encounter_id" />

        <EditText
            android:id="@+id/et_act_add_sqa_answer_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_sqa_encounter_id"
            app:layout_constraintTop_toBottomOf="@+id/spin_act_add_sqa_question_id" />

        <ImageButton
            android:id="@+id/ibtn_act_add_sqa_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_sqa_answer_value"
            app:srcCompat="@drawable/ic_save" />

        <ImageButton
            android:id="@+id/ibtn_act_add_sqa_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_act_add_sqa_save"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_sqa_answer_value"
            app:srcCompat="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/ibtn_act_add_sqa_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_act_add_sqa_delete"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_sqa_answer_value"
            app:srcCompat="@drawable/ic_clear" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
