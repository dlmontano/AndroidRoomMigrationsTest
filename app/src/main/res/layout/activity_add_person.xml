<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPersonActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_act_add_person_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="UUID:"
            app:layout_constraintBottom_toTopOf="@+id/et_act_add_person_document_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_uuid" />

        <TextView
            android:id="@+id/tv_act_add_person_document_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Doc. ID:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_person_document_id"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_document_id" />

        <TextView
            android:id="@+id/tv_act_add_person_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Primer nombre:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_person_first_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_first_name" />

        <TextView
            android:id="@+id/tv_act_add_person_second_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Segundo nombre:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_person_second_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_second_name" />

        <TextView
            android:id="@+id/tv_act_add_person_first_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Primer apellido:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_person_first_last_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_first_last_name" />

        <TextView
            android:id="@+id/ttv_act_add_person_birth_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:text="Fecha nac.:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_person_birth_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_birth_date" />

        <TextView
            android:id="@+id/tv_act_add_person_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Sexo:"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_act_add_person_gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_act_add_person_gender" />

        <TextView
            android:id="@+id/tv_act_add_person_change_psswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Cambio contr.:"
            app:layout_constraintBottom_toBottomOf="@+id/spinner_act_add_person_change_psswd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner_act_add_person_change_psswd" />

        <TextView
            android:id="@+id/tv_act_add_person_token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Token:"
            app:layout_constraintBottom_toBottomOf="@+id/et_act_add_person_token"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/et_act_add_person_token" />

        <EditText
            android:id="@+id/et_act_add_person_uuid"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_act_add_person_document_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_uuid" />

        <EditText
            android:id="@+id/et_act_add_person_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_document_id" />

        <EditText
            android:id="@+id/et_act_add_person_second_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_first_name" />

        <EditText
            android:id="@+id/et_act_add_person_first_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_second_name" />

        <Spinner
            android:id="@+id/spinner_act_add_person_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:entries="@array/person_gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_birth_date" />

        <Spinner
            android:id="@+id/spinner_act_add_person_change_psswd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:entries="@array/yes_no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/spinner_act_add_person_gender" />

        <EditText
            android:id="@+id/et_act_add_person_birth_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_first_last_name" />

        <EditText
            android:id="@+id/et_act_add_person_token"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_act_add_person_second_name"
            app:layout_constraintTop_toBottomOf="@+id/spinner_act_add_person_change_psswd" />

        <ImageButton
            android:id="@+id/ibtn_act_add_person_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_token"
            app:srcCompat="@drawable/ic_save" />

        <ImageButton
            android:id="@+id/ibtn_act_add_person_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_act_add_person_save"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_token"
            app:srcCompat="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/ibtn_act_add_person_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/ibtn_act_add_person_delete"
            app:layout_constraintTop_toBottomOf="@+id/et_act_add_person_token"
            app:srcCompat="@drawable/ic_clear" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
